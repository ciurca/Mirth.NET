@page
@model ProiectMPD.Pages.User.Releases.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Artist)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Release) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.ID)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
            </td>
                @if (Model.ReleasesInLibrary.Contains(@item.ID))
                {
                    <td>
                        <form method="post" asp-page-handler="RemoveFromLibrary">
                            <input type="hidden" name="releaseId" value="@item.ID" />
                            <button type="submit" class="btn btn-danger"><i class="bi bi-x-square-fill"></i> Remove from Library</button>
                        </form>
                    </td>
                }
                else
                {
                <td>
                        <form method="post" asp-page-handler="AddToLibrary">
                            <input type="hidden" name="releaseId" value="@item.ID" />
                            <button type="submit" class="btn btn-success"><i class="bi bi-plus-square-fill"></i> Add to Library</button>
                        </form>
                </td>
                    
                }

        </tr>
}
    </tbody>
</table>
