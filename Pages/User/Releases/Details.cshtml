@page
@model ProiectMPD.Pages.User.Releases.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Release</h4>
    @if (Model.IsInLibrary)
    {
        <div>
            <form method="post" asp-page-handler="RemoveFromLibrary">
                <input type="hidden" name="releaseId" value="@Model.Release.ID" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-x-square-fill"></i> Remove from Library</button>
            </form>
        </div>

    }
    else
    {
        <div>
            <form method="post" asp-page-handler="AddToLibrary">
                <input type="hidden" name="releaseId" value="@Model.Release.ID" />
                <button type="submit" class="btn btn-success"><i class="bi bi-plus-square-fill"></i> Add to Library</button>
            </form>
        </div>
        
    }
    <div>
        <a asp-page="./Reviews" asp-route-id="@Model.Release.ID" class="btn btn-info"><i class="bi bi-chat-right-text-fill"></i> Reviews</a>
    </div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Release.Name)
        </dd>
           <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Artist)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Release.Artist != null)
            {
                @Html.DisplayFor(model => model.Release.Artist.Name)
            }
            else
            {
                <span>Artist information is not available.</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Language)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release.Language)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Label)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release.Label)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release.Year)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Release.Songs != null && Model.Release.Songs.Any())
    {
        <h4>Songs</h4>
        <hr />
        <ul>
            @foreach (var song in Model.Release.Songs)
            {
                <li><b>@song.Title</b> (@song.Length)</li> <!-- Display properties of the song as needed -->
            }
        </ul>
    }
    else
    {
        <p>No songs available for this release.</p>
    }
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
