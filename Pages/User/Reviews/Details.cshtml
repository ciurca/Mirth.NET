@page
@model ProiectMPD.Pages.User.Reviews.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Release)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Release.Name)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Review.UserId == Model.userId)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Review.ID">Edit</a> 
        <span>|</span>
        <a asp-page="./Index">Back to My Reviews</a>
    }
    <br />
        <a asp-page="/User/Releases/Reviews" asp-route-id="@Model.Review.ReleaseID">View All Reviews</a> 
</div>
